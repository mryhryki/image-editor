{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsxFactory": "React.createElement",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "noEmit": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules/**",
    "**/*.test.ts"
  ]
}
